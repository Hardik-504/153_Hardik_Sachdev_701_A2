<!DOCTYPE html>
<html>
<head>
  <title>Edit Employee</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
  <h1>Edit Employee</h1>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/employees/<%= employee._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label>Name</label>
      <input type="text" name="name" value="<%= employee.name %>" class="form-control" required>
    </div>

    <div class="mb-3">
      <label>Email</label>
      <input type="email" name="email" value="<%= employee.email %>" class="form-control" required>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <label>Basic</label>
        <input type="number" name="basic" value="<%= employee.basic %>" class="form-control">
      </div>
      <div class="col-md-3 mb-3">
        <label>HRA</label>
        <input type="number" name="hra" value="<%= employee.hra %>" class="form-control">
      </div>
      <div class="col-md-3 mb-3">
        <label>DA</label>
        <input type="number" name="da" value="<%= employee.da %>" class="form-control">
      </div>
      <div class="col-md-3 mb-3">
        <label>PF</label>
        <input type="number" name="pf" value="<%= employee.pf %>" class="form-control">
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/employees" class="btn btn-secondary">Cancel</a>
  </form>
</body>
</html>
